<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.manager.ProductManageFragment">

    <LinearLayout android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID: "
                android:textColor="#000000"/>

            <EditText
                android:hint="ID"
                android:layout_width="280dp"
                android:layout_height="40dp"
                android:id="@+id/edt_addProduct_id"
                android:padding="10dp"
                android:layout_marginLeft="38dp"
                android:background="@drawable/edt_email_background"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name: "
                android:textColor="#000000"/>

            <EditText
                android:hint="Name"
                android:layout_width="280dp"
                android:layout_height="40dp"
                android:id="@+id/edt_addProduct_name"
                android:layout_marginLeft="14dp"
                android:padding="10dp"
                android:background="@drawable/edt_email_background"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity: "
                android:textColor="#000000"/>

            <EditText
                android:digits="0123456789"
                android:inputType="number"
                android:hint="Quantity"
                android:layout_width="280dp"
                android:layout_height="40dp"
                android:id="@+id/edt_addProduct_quantity"
                android:padding="10dp"
                android:background="@drawable/edt_email_background"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price: "
                android:textColor="#000000"/>

            <EditText
                android:digits="0123456789"
                android:inputType="number"
                android:hint="Price"
                android:layout_width="280dp"
                android:layout_height="40dp"
                android:id="@+id/edt_addProduct_Price"
                android:padding="10dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/edt_email_background"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Image: "
                android:textColor="#000000"/>

            <Spinner
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinner_imageItem"
                android:layout_marginLeft="15dp"/>
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:id="@+id/btn_addProduct"
            android:text="ADD PRODUCT"
            android:textColor="@color/white"
            android:background="@drawable/button_background"
            android:layout_gravity="center"
            android:layout_marginTop="150dp"/>

    </LinearLayout>

</FrameLayout>